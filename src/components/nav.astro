---

<nav class='nav'>
  <div id='flexContainer'>
    <a
      href="/"
      class='imageWrapper'
    >
      <img
        src="/bioethx.png"
        width={80}
        alt="BioEthx logo"
      />
    </a>
    <ul id="navLinks" class='navLinks'>
      <li class='navLinkItem'>
        <a href="/" class='navLinkText'>
          Home
        </a>
      </li>
      <li class='navLinkItem'>
        <a href="/service/overview" class='navLinkText'>
          Service
        </a>
      </li>
      <li class='navLinkItem'>
        <a href="/events/" class='navLinkText'>
          Events
        </a>
      </li>
      <li class='navLinkItem'>
        <a href="/register" class='navLinkText'>
          Register
        </a>
      </li>
      <li class='navLinkItem'>
        <a
          href="https://online.bioethx.net/"
          target="_blank"
          rel="noreferrer"
          class='navLinkText'
        >
          Login
        </a>
      </li>
    </ul>
    <button id="hamburger" class='hamburger'>
      <div class='bar'></div>
      <div class='bar'></div>
      <div class='bar'></div>
    </button>
  </div>
</nav>

<style>
#flexContainer {
  margin: auto;
  width: 85%;
  max-width: 1366px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 3rem;
}

.nav {
  background: white;
  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.25);
  position: fixed;
  top: 0;
  z-index: 2;
  width: 100%;
}

.imageWrapper {
  display: flex;
}

.navLinks {
  margin: 0;
  display: flex;
  justify-content: flex-end;
  list-style: none;
}

.navLinkItem {
  padding: 0.75rem;
}

.navLinkText {
  color: #333;
  text-decoration: none;
}

.navLinkText:hover {
  font-weight: bold;
}

.navLinkText:active {
  color: dodgerblue;
}

.hamburger {
  display: none;
  border: none;
  background: none;
}

.bar {
  background: #000;
  height: 3px;
  width: 24px;
  margin-bottom: 4px;
  border-radius: 4px;
}

@media (max-width: 768px) {
  #flexContainer {
    width: 90%;
  }
  .navLinks {
    display: none;
    position: absolute;
    height: 100vh;
    top: 45px;
    flex-direction: column;
    right: 0;
    background: white;
    width: 100%;
    text-align: end;
    justify-content: start;
  }

  .navLinkItem {
    margin: 1rem;
    border-bottom: 1px solid #ccc;
    padding-right: 0.33rem;
    padding-bottom: 0;
  }

  .navLinkText {
    color: #000;
    font-size: 24px;
    text-decoration: none;
  }

  .navLinkText:hover {
    color: dodgerblue;
    font-weight: bold;
  }
  .hamburger {
    display: block;
  }
}
</style>

<script>
  const hamburger = document.querySelector('#hamburger');

  function handleClick() {
    const x = document.getElementById('navLinks');
    if (x.style.display === "block") {
        x.style.display = "none";
      } else {
        x.style.display = "block";
      }
    }

  hamburger.addEventListener('click', handleClick)
</script>
